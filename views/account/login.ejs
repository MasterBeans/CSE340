<!-- views/account/login.ejs -->
<%- include('../partials/head') %>


<main>

    <div class="login-card">
    <h1><%= title %></h1>
    
    <!-- Flash message display -->
    <% if (messages.invalid && messages.invalid.length > 0) { %>
      <div class="alert alert-danger">
        <% messages.invalid.forEach(function(msg) { %>
          <p><%= msg %></p>
        <% }); %>
      </div>
    <% } %>
  
    <% if (messages.registered && messages.registered.length > 0) { %>
      <div class="alert alert-success">
        <% messages.registered.forEach(function(msg) { %>
          <p><%= msg %></p>
        <% }); %>
      </div>
    <% } %>

    <!-- Login Form -->
    <form action="/account/login" method="POST" class="login-form">
        <label for="email">Email Address:</label>
        <input type="email" id="email" name="account_email" required placeholder="Enter a valid email address"  value="<%= locals.account_email %>">
        
        <label for="password">Password:</label>
        <span class="password-hint">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
        <input type="password" id="password" name="account_password" required
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">

        <button type="submit">Login</button>
    </form>

    <!-- Registration link -->
    <p id="register">No account? <a href="/account/register">Sign-up</a></p>
</div>
</main>

